<Window x:Class="BLELocator.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:BLELocator.UI"
        Title="MainWindow" Height="350" Width="525"
        WindowState="Maximized"
        >
    <Window.DataContext>
        <local:BleLocatorViewModel></local:BleLocatorViewModel>
    </Window.DataContext>
    <Window.Resources>
        <Style TargetType="TextBlock">
            <Setter Property="FontSize" Value="14"  />
                    
        </Style>
    </Window.Resources>
    <DockPanel>
        
        <ToolBarTray DockPanel.Dock="Top" VerticalAlignment="Top" >
            <ToolBar>
                <Button 
                        Command="{Binding EditConfigurationCommand}"
                        ToolTip="Settings">
                    <StackPanel Orientation="Vertical" HorizontalAlignment="Center">
                        <Image Source="Images/Settings-icon.png"></Image>
                        <TextBlock Text="Settings" HorizontalAlignment="Center"></TextBlock>
                    </StackPanel>
                </Button>
            </ToolBar>
        </ToolBarTray>
    </DockPanel>
</Window>
