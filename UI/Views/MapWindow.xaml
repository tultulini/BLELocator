                    <RotateTransform Angle="270"></RotateTransform>
                </TextBlock.LayoutTransform></TextBlock>
        <TextBlock Text="Exit"
                   Foreground="Red"
                   FontSize="26"
                   Name="ExitTextHor"/>
        <Border Name="PassageRect2"
                BorderBrush="White"
                BorderThickness="4">
            <TextBlock Text="Passage"
                       HorizontalAlignment="Left"
                       FontSize="18"
                       VerticalAlignment="Top"
                       Foreground="Lime"></TextBlock>
        </Border>

