<Window x:Class="BLELocator.UI.Views.CaptureSessionDetailsView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        SizeToContent="WidthAndHeight"
        Title="CaptureSessionDetailsView"
        FontSize="18">
    <StackPanel Orientation="Vertical">
        <GroupBox Header="Capture Session Commments" Margin="10">
            <TextBox Width="400"
                     Height="200"
                     Text="{Binding Comments, Mode=TwoWay}"></TextBox>
        </GroupBox>
        <Button Content="OK" Width="100" HorizontalAlignment="Right"
                RenderTransformOrigin="0.22,0"
                Click="Button_Click"></Button>
    </StackPanel>
</Window>
